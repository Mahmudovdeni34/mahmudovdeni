<Window x:Class="WeatherTranslator.Window1" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Переводчик погоды" Height="200" Width="400">
    <Grid>
        <Label Content="Введите слово на русском:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,30,0,0"/>

        <Button Content="Перевести" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="220,30,0,0" Click="TranslateButton_Click"/>

        <Label Content="Перевод:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBlock x:Name="TranslationTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="350"/>
    </Grid>
</Window>